@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no">
    <meta property='og:title' content='Family Futures by Anthony Duval' />
    <meta property='og:image' content='/Img/ff-square.jpg' />
    <meta property='og:url' content='//aduval-finance.herokuapp.com' />
    <title>Family Futures by Anthony Duval</title>
    <link rel="icon" type="image/x-icon" href="~/Img/family.png" />
    <!-- BEGIN GLOBAL MANDATORY STYLES -->
    <link href="https://fonts.googleapis.com/css?family=Quicksand:400,500,600,700&display=swap" rel="stylesheet">
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/plugins.css" rel="stylesheet" />
    <link href="~/css/form-1.css" rel="stylesheet" />
    <!-- END GLOBAL MANDATORY STYLES -->
    <link href="~/css/theme-checkbox-radio.css" rel="stylesheet" />
    <link href="~/css/switches.css" rel="stylesheet" />
    <link href="~/css/alert.css" rel="stylesheet" />
</head>
<body class="form">


    <div class="form-container">
        <div class="form-form">
            <div class="form-form-wrap">
                <div class="form-container">
                    <div class="form-content">
                        <h1 class="">Welcome to <span class="brand-name">Family Futures</span></h1>
                        <h6>
                            Welcome to the Family Futures Financial Portal. This application allows you to
                            manage and track household or personal finances. Login or register for a free account
                            to join a household and get started!
                        </h6>
                        <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Login">Login</a>
                        <a class="btn btn-secondary" asp-area="Identity" asp-page="/Account/Register">Register</a>
                        <a class="btn btn-info" href="javascript:document.getElementById('demoForm').submit()">Demo Login</a>
                        <form id="demoForm" asp-controller="Home" asp-action="DemoLogin" method="post"></form>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-image">
            <div class="l-image">
            </div>
        </div>
    </div>


    <!-- BEGIN GLOBAL MANDATORY SCRIPTS -->
    <script src="~/js/jquery-3.1.1.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>


    <!-- END GLOBAL MANDATORY SCRIPTS -->
    <script src="~/js/form-1.js"></script>
</body>
</html>
